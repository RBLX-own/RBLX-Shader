-- ===================== DRAGGABLE SQUARE ICON =====================
local squareIcon = Instance.new("ImageButton")
squareIcon.Size = UDim2.new(0, 85, 0, 85)
squareIcon.Position = UDim2.new(0.05, 0, 0.5, -42)
squareIcon.Image = "rbxassetid://121158130775447"
squareIcon.BackgroundTransparency = 1
squareIcon.Visible = false
squareIcon.Parent = screenGui

local sqCorner = Instance.new("UICorner", squareIcon)
sqCorner.CornerRadius = UDim.new(1, 0) -- Perfect square

local sqStroke = Instance.new("UIStroke", squareIcon)
sqStroke.Color = Color3.fromRGB(0, 255, 200)
sqStroke.Thickness = 7
sqStroke.Transparency = 0.3

-- Draggable
local dragging, dragInput, dragStart, startPos
squareIcon.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = squareIcon.Position
        
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

squareIcon.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement and dragging then
        local delta = input.Position - dragStart
        squareIcon.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
end)

