-- Buttons
local function createButton(name, posY, defaultColor)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0.88, 0, 0.18, 0)
    btn.Position = UDim2.new(0.06, 0, posY, 0)
    btn.Text = name
    btn.BackgroundColor3 = defaultColor
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    btn.TextScaled = true
    btn.Font = Enum.Font.GothamBold
    btn.Parent = mainFrame
    
    local corner = Instance.new("UICorner", btn)
    corner.CornerRadius = UDim.new(0, 14)
    
    local stroke = Instance.new("UIStroke", btn)
    stroke.Color = Color3.fromRGB(255, 255, 255)
    stroke.Thickness = 2.5
    return btn
end

local shaderBtn = createButton("Enable Ultra Shader", 0.28, Color3.fromRGB(0, 220, 140))
local fpsBoostBtn = createButton("Activate FPS Boost", 0.52, Color3.fromRGB(0, 220, 140))
local fullbrightBtn = createButton("Enable Fullbright", 0.76, Color3.fromRGB(0, 180, 255))

-- Extra satisfying feature: Speed Boost
local speedBtn = createButton("Speed x2", 1.0, Color3.fromRGB(255, 180, 0)) -- Will be hidden initially
speedBtn.Position = UDim2.new(0.06, 0, 1.0, -55) -- Manual adjust

-- ===================== SHADER (Ultra Beautiful) =====================
local shaderEnabled = false
local function toggleShader()
    shaderEnabled = not shaderEnabled
    if shaderEnabled then
        shaderBtn.Text = "Disable Ultra Shader"
        shaderBtn.BackgroundColor3 = Color3.fromRGB(220, 50, 50)
        
        Lighting.Brightness = 5
        Lighting.GlobalShadows = true
        Lighting.ClockTime = 14
        Lighting.OutdoorAmbient = Color3.fromRGB(100, 120, 150)
        
        local bloom = Lighting:FindFirstChild("Bloom") or Instance.new("BloomEffect", Lighting)
        bloom.Intensity = 3.2
        bloom.Size = 48
        bloom.Threshold = 0.6
        
        local sunrays = Lighting:FindFirstChild("SunRays") or Instance.new("SunRaysEffect", Lighting)
        sunrays.Intensity = 0.55
        
        local dof = Lighting:FindFirstChild("DepthOfField") or Instance.new("DepthOfFieldEffect", Lighting)
        dof.Enabled = true
        dof.FocusDistance = 20
        dof.InFocusRadius = 45
        
        local colorCorr = Lighting:FindFirstChild("ColorCorrection") or Instance.new("ColorCorrectionEffect", Lighting)
        colorCorr.Brightness = 0.25
        colorCorr.Contrast = 0.35
        colorCorr.Saturation = 0.8
        
        local atmosphere = Lighting:FindFirstChild("Atmosphere") or Instance.new("Atmosphere", Lighting)
        atmosphere.Density = 0.35
        atmosphere.Offset = 0.28
        atmosphere.Color = Color3.fromRGB(180, 200, 255)
        atmosphere.Decay = Color3.fromRGB(90, 110, 140)
        atmosphere.Glare = 1.2
        atmosphere.Haze = 0.6
    else
        shaderBtn.Text = "Enable Ultra Shader"
        shaderBtn.BackgroundColor3 = Color3.fromRGB(0, 220, 140)
        
        for _, v in pairs(Lighting:GetChildren()) do
            if v:IsA("PostEffect") or v:IsA("Atmosphere") then
                v.Enabled = false
            end
        end
        Lighting.Brightness = 2
        Lighting.GlobalShadows = false
    end
end
shaderBtn.MouseButton1Click:Connect(toggleShader)

-- ===================== FPS BOOST =====================
local boostEnabled = false
local function toggleFPSBoost()
    boostEnabled = not boostEnabled
    if boostEnabled then
        fpsBoostBtn.Text = "BOOSTED ✓"
        fpsBoostBtn.BackgroundColor3 = Color3.fromRGB(0, 255, 100)
        
        settings().Rendering.QualityLevel = Enum.QualityLevel.Level01
        Lighting.GlobalShadows = false
        Lighting.FogEnd = 999999
        
        for _, obj in pairs(workspace:GetDescendants()) do
            if obj:IsA("ParticleEmitter") or obj:IsA("Trail") or obj:IsA("Smoke") or obj:IsA("Fire") then
                obj.Enabled = false
            end
        end
    else
        fpsBoostBtn.Text = "Activate FPS Boost"
        fpsBoostBtn.BackgroundColor3 = Color3.fromRGB(0, 220, 140)
        settings().Rendering.QualityLevel = Enum.QualityLevel.Automatic
    end
end
fpsBoostBtn.MouseButton1Click:Connect(toggleFPSBoost)

-- ===================== FULLBRIGHT =====================
local fullbrightEnabled = false
local function toggleFullbright()
    fullbrightEnabled = not fullbrightEnabled
    if fullbrightEnabled then
        fullbrightBtn.Text = "Disable Fullbright"
        fullbrightBtn.BackgroundColor3 = Color3.fromRGB(255, 220, 80)
        Lighting.Brightness = 6
        Lighting.ClockTime = 12
        Lighting.OutdoorAmbient = Color3.fromRGB(255, 255, 255)
    else
        fullbrightBtn.Text = "Enable Fullbright"
        fullbrightBtn.BackgroundColor3 = Color3.fromRGB(0, 180, 255)
        Lighting.Brightness = 2
    end
end
fullbrightBtn.MouseButton1Click:Connect(toggleFullbright)

-- ===================== SPEED BOOST =====================
local speedEnabled = false
local originalSpeed = 16
local function toggleSpeed()
    speedEnabled = not speedEnabled
    if speedEnabled then
        speedBtn.Text = "Speed: NORMAL"
        speedBtn.BackgroundColor3 = Color3.fromRGB(255, 100, 80)
        if player.Character and player.Character:FindFirstChild("Humanoid") then
            originalSpeed = player.Character.Humanoid.WalkSpeed
            player.Character.Humanoid.WalkSpeed = 35
        end
    else
        speedBtn.Text = "Speed x2"
        speedBtn.BackgroundColor3 = Color3.fromRGB(255, 180, 0)
        if player.Character and player.Character:FindFirstChild("Humanoid") then
            player.Character.Humanoid.WalkSpeed = originalSpeed
        end
    end
end
speedBtn.MouseButton1Click:Connect(toggleSpeed)

-- ===================== INFINITE JUMP (Extra Feature) =====================
local infJumpEnabled = false
local jumpConnection
local function toggleInfJump()
    infJumpEnabled = not infJumpEnabled
    if infJumpEnabled then
        jumpConnection = UserInputService.JumpRequest:Connect(function()
            if player.Character and player.Character:FindFirstChild("Humanoid") then
                player.Character.Humanoid:ChangeState(Enum.HumanoidStateType.Jumping)
            end
        end)
    else
        if jumpConnection then jumpConnection:Disconnect() end
    end
end

-- Add a hidden toggle for inf jump (press J key for fun)
UserInputService.InputBegan:Connect(function(input)
    if input.KeyCode == Enum.KeyCode.J then
        toggleInfJump()
        StarterGui:SetCore("SendNotification", {Title = "Infinite Jump", Text = infJumpEnabled and "ENABLED" or "DISABLED", Duration = 2})
    end
end)

-- ===================== FPS COUNTER =====================
local frames = 0
local lastTime = tick()
RunService.RenderStepped:Connect(function()
    frames += 1
    if tick() - lastTime >= 1 then
        fpsLabel.Text = "FPS: " .. math.floor(frames)
        frames = 0
        lastTime = tick()
    end
end)

-- ===================== BUTTON ANIMATIONS & SOUNDS =====================
local clickSound = Instance.new("Sound", screenGui)
clickSound.SoundId = "rbxassetid://12221967"
clickSound.Volume = 0.7

local function animatePress(btn)
    local originalSize = btn.Size
    TweenService:Create(btn, TweenInfo.new(0.1), {Size = originalSize * 0.92}):Play()
    wait(0.1)
    TweenService:Create(btn, TweenInfo.new(0.15), {Size = originalSize}):Play()
end

for _, btn in pairs({shaderBtn, fpsBoostBtn, fullbrightBtn, speedBtn, joinBtn, continueBtn}) do
    btn.MouseButton1Click:Connect(function()
        clickSound:Play()
        animatePress(btn)
    end)
end

-- ===================== LOGIC =====================
continueBtn.MouseButton1Click:Connect(function()
    telegramPanel:Destroy()
    squareIcon.Visible = true
    mainFrame.Visible = true
    fpsFrame.Visible = true
end)

squareIcon.MouseButton1Click:Connect(function()
    mainFrame.Visible = not mainFrame.Visible
    fpsFrame.Visible = mainFrame.Visible
end)

closeBtn.MouseButton1Click:Connect(function()
    mainFrame.Visible = false
    fpsFrame.Visible = false
end)

print("RBLX Enchancer loaded! Drag the square, enjoy the ultra shader & boosts ✨")